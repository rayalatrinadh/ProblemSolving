class Solution {
    public int subarraysDivByK(int[] nums, int k) {
        
        if(nums.length < 1)
        return 0;

        int ans = 0,n = nums.length;

        for(int l = 0; l < n; l++){
            for(int i = l; i < n; i++){
                int sum = 0;
                for(int j = l; j <= i; j++){
                    sum += nums[j];
                }
                if(sum % k == 0)
                ans++;
            }
           
        }
        return ans;
    }
}
